<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.hammerhead226.masterfrcscouter.Activities.LoginActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginButton"
        android:id="@+id/bLogin"
        android:enabled="true"
        android:clickable="true"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/enterInfoText"
        android:id="@+id/infoTextview"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="15"
        android:id="@+id/scouterName"
        android:singleLine="false"
        android:gravity="center"
        android:hint="@string/name"
        android:layout_below="@+id/infoTextview"
        android:layout_marginTop="71dp"
        android:layout_alignStart="@+id/rACheckbox"
        android:layout_alignEnd="@+id/bACheckbox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="6"
        android:id="@+id/editText"
        android:gravity="center"
        android:hint="@string/scoutingPositionText"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/pitScoutCheckbox"
        android:layout_alignStart="@+id/rACheckbox"
        android:layout_alignEnd="@+id/infoTextview" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red Alliance"
        android:id="@+id/rACheckbox"
        android:layout_below="@+id/scouterName"
        android:layout_alignStart="@+id/infoTextview"
        android:layout_marginTop="44dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue Alliance"
        android:id="@+id/bACheckbox"
        android:layout_alignTop="@+id/rACheckbox"
        android:layout_toEndOf="@+id/rACheckbox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pit Scout"
        android:id="@+id/pitScoutCheckbox"
        android:layout_below="@+id/rACheckbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

</RelativeLayout>
